<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="+10"
            android:id="@+id/lblSuggestionVoteCount"
            android:layout_gravity="center_vertical"
            android:padding="10dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/imgSuggestion"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_launcher" />

    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Near Agora under the sky on the road thousands of kilometers from the center of teh earth and i shall go on to write more and more till i find success"
        android:id="@+id/lblSuggestionInformalLocation"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Eto baaje road dekhi nai ami jibone"
        android:id="@+id/lblSuggestionInformalProblemDesc"
        android:layout_marginTop="6dp"
        android:textStyle="italic"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="6dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/posted_by"
            android:id="@+id/textView7"
            android:layout_gravity="right"
            android:paddingRight="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="&lt;User Name>"
            android:id="@+id/lblSuggestionUser"
            android:textColor="#16586E" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="2 May, 2016"
        android:id="@+id/lblSuggestionDate"
        android:layout_gravity="right" />

</LinearLayout>
